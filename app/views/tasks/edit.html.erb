<%= form_with(model: @task, local: true) do |form| %>

  <div class="purpose">
    <%= form.label :purpose %>
    <%= form.text_field :purpose %>
  </div>

    <div class="time">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time %>
  </div>



  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>
